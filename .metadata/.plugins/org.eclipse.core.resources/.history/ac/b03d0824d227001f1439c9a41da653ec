    		System.out.println("erreur : il ne peut pas y avoir plus de 26 rangées");
    		return false;
    	}
    	else
    	{
    		String alphabet = "abcdefghijklmnopqrstuvwxyz";
    		
    		for(int )
    	}
    }

}
